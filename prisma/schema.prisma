generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.sqlite"
}

model Progress {
    id        Int      @id @default(autoincrement())
    userId    String   @unique
    user      AuthUser @relation(fields: [userId], references: [id])
    module1   Boolean  @default(false)
    module2   Boolean  @default(false)
    module3   Boolean  @default(false)
    module4   Boolean  @default(false)
    module5   Boolean  @default(false)
    module6   Boolean  @default(false)
    module7   Boolean  @default(false)
    module8   Boolean  @default(false)
    practical Boolean  @default(false)

    @@map("progress")
}

model AuthUser {
    id           String        @id @unique
    name         String
    username     String        @unique
    phone        String
    id_no        String
    school       String
    role         String        @default("user")
    progress     Progress?
    auth_session AuthSession[]
    auth_key     AuthKey[]

    @@map("auth_user")
}

model AuthSession {
    id             String   @id @unique
    user_id        String
    active_expires BigInt
    idle_expires   BigInt
    auth_user      AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
    @@map("auth_session")
}

model AuthKey {
    id              String   @id @unique
    hashed_password String?
    user_id         String
    auth_user       AuthUser @relation(references: [id], fields: [user_id], onDelete: Cascade)

    @@index([user_id])
    @@map("auth_key")
}
